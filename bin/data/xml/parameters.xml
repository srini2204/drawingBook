<params>
  <!-- application name -->
  <app_name>Saturday Night Fleaver</app_name>
  
  <!-- images to be used in the app -->
  <app_background_image>images/Backgorund2.png</app_background_image>
  <app_foreground_image>images/SNF_Spotlights.png</app_foreground_image>
  
  <!-- application videos -->
  <app_splash_video>videos/Sat Nigt Flea-Ver.mov</app_splash_video>
  
  <!-- application shaders -->
  <app_vert_shader />
  <app_frag_shader />
  <inactivity_timeout_ms>25000</inactivity_timeout_ms>
  <game_duration_ms>30000</game_duration_ms>
  <game_over_timeout>5000</game_over_timeout>

  <precountdown_duration_ms>5000</precountdown_duration_ms>
  <countdown_duration_ms>3000</countdown_duration_ms>
  <countdown_colour r="255" g="255" b="255" a="255" />

  <face_min_width_px>20</face_min_width_px>
  <face_rectangle_v_margin_px>10</face_rectangle_v_margin_px>
  <face_rectangle_h_margin_px>10</face_rectangle_h_margin_px>

  <sounds>
    <sound name="countdown" loop="1" file="Sounds/Saturday Night Flea-Ver - Main Title.wav" volume="0.2" />
    <sound name="instructions" file="sounds/Saturday Night Flea-ver_VO_Instructions.wav" volume="0.5" />
    <sound name="finish" folder="sounds/congratulations" volume="0.8" />
  </sounds>

  <faceinaboxes>
    <faceinabox file="spritesheets/helmet1.xml" x="136.000000" y="308.000000" scale="1.000000" angle="0.000000">
      <faceRectangle x="-9.000000" y="13.000000" width="260.000000" height="260.000000" angle="0" />
      <maskImage>images/AR/Masks 1.png</maskImage>
    </faceinabox>
    <faceinabox file="spritesheets/helmet2.xml" x="385.000000" y="236.000000" scale="1.000000" angle="0.000000">
      <faceRectangle x="207.000000" y="-22.000000" width="260.000000" height="260.000000" angle="0" />
      <maskImage>images/AR/Masks 2.png</maskImage>
    </faceinabox>
    <faceinabox file="spritesheets/helmet3.xml" x="995.000000" y="106.000000" scale="1.000000" angle="0.848473">
      <faceRectangle x="70.000000" y="122.000000" width="260.000000" height="260.000000" angle="0" />
      <maskImage>images/AR/Masks 3.png</maskImage>
    </faceinabox>
    <faceinabox file="spritesheets/helmet4.xml" x="1291.000000" y="222.000000" scale="1.000000" angle="0.000000">
      <faceRectangle x="179.000000" y="-10.000000" width="260.000000" height="260.000000" angle="0" />
      <maskImage>images/AR/Masks 4.png</maskImage>
    </faceinabox>
  </faceinaboxes>
</params>
